<div class="py-10">
  <h1 class="text-4xl font-bold text-center text-indigo-700 mb-8">Welcome to BlogApp</h1>
  
  <div class="max-w-3xl mx-auto">
    <p class="text-xl text-center mb-10">A place to share your thoughts and ideas with the world.</p>
    
    <div class="mb-8 text-center">
      <% if user_signed_in? %>
        <%= link_to "Create New Post", new_post_path, class: "bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-2 px-6 rounded-lg" %>
      <% else %>
        <%= link_to "Sign up to start blogging", new_user_registration_path, class: "bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-2 px-6 rounded-lg" %>
      <% end %>
    </div>
    
    <h2 class="text-2xl font-semibold mb-4 border-b-2 border-indigo-200 pb-2">Recent Posts</h2>
    
    <% if @recent_posts.any? %>
      <div>
        <% @recent_posts.each do |post| %>
          <div class="mb-6 bg-white p-6 rounded-lg shadow-md hover:shadow-lg transition-shadow duration-300">
            <h3 class="text-xl font-semibold mb-2">
              <%= link_to post.title, post_path(post), class: "text-indigo-600 hover:text-indigo-800" %>
            </h3>
            <p class="text-gray-600 mb-2">
              By <%= post.user.email %> on <%= post.created_at.strftime("%B %d, %Y") %>
            </p>
            <div class="text-gray-700 mb-4">
              <%= truncate(post.content, length: 150) %>
            </div>
            <%= link_to "Read more", post_path(post), class: "text-indigo-600 hover:text-indigo-800" %>
          </div>
        <% end %>
      </div>
      
      <div class="mt-6 text-center">
        <%= link_to "View all posts", posts_path, class: "text-indigo-600 hover:text-indigo-800 font-medium" %>
      </div>
    <% else %>
      <p class="text-gray-600">No posts published yet. Be the first to share something!</p>
    <% end %>
  </div>
</div>