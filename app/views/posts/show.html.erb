<div class="max-w-3xl mx-auto bg-white rounded-lg shadow-md overflow-hidden">
  <div class="p-6">
    <h1 class="text-3xl font-bold mb-4 text-indigo-700"><%= @post.title %></h1>
    
    <div class="flex items-center text-gray-600 mb-8">
      <span>By <%= @post.user.email %></span>
      <span class="mx-2">•</span>
      <span><%= @post.created_at.strftime("%B %d, %Y") %></span>
      <% if @post.published %>
        <span class="mx-2">•</span>
        <span class="bg-green-100 text-green-800 text-xs font-semibold px-2 py-1 rounded">Published</span>
      <% else %>
        <span class="mx-2">•</span>
        <span class="bg-yellow-100 text-yellow-800 text-xs font-semibold px-2 py-1 rounded">Draft</span>
      <% end %>
    </div>
    
    <div class="prose max-w-none">
      <%=  @post.content %>
    </div>
    
    <div class="mt-8 pt-4 border-t border-gray-200">
      <div class="flex space-x-4">
        <%= link_to "Back to Posts", posts_path, class: "text-indigo-600 hover:text-indigo-800" %>
        
        <% if user_signed_in? && @post.user == current_user %>
          <%= link_to "Edit", edit_post_path(@post), class: "text-blue-600 hover:text-blue-800" %>
          <%= link_to "Delete", post_path(@post), method: :delete, data: { confirm: "Are you sure?" }, class: "text-red-600 hover:text-red-800" %>
        <% end %>
      </div>
    </div>
  </div>
</div>